{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",

    /* Path Aliases */
    "paths": {
      "@/*": ["./src/*"] // Simplifies imports using aliases
    }
  },
  "exclude": ["webpack.config.js", "node_modules", "postcss.config.js", "tailwind.config.js"]
}
